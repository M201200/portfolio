---
import ProjectCard from "../components/ProjectCard.astro"
import TechCard from "../components/TechCard.astro"
import Layout from "../layouts/Layout.astro"
const base = [
  { name: "JavaScript", image: "/icons/javascript.svg" },
  { name: "HTML", image: "/icons/html-5.svg" },
  { name: "CSS", image: "/icons/css-3.svg" },
  { name: "SQL", image: "/icons/sql.svg" },
]
const supersets = [
  { name: "Typescript", image: "/icons/typescript.svg" },
  { name: "React", image: "/icons/react.svg" },
  { name: "Tailwind", image: "/icons/tailwind.svg" },
  { name: "MySQL", image: "/icons/mysql.svg" },
]
const frameworks = [
  { name: "Astro", image: "/icons/astro.svg" },
  { name: "Next.js", image: "/icons/nextjs.svg" },
  { name: "SASS", image: "/icons/sass.svg" },
  { name: "Drizzle", image: "/icons/drizzle.svg" },
]

const myLeisure = [
  { name: "TypeScript", image: "/icons/typescript.svg" },
  { name: "Next.js", image: "/icons/nextjs.svg" },
  { name: "Tailwind", image: "/icons/tailwind.svg" },
]

const newFurniture = [
  { name: "TypeScript", image: "/icons/typescript.svg" },
  { name: "Next.js", image: "/icons/nextjs.svg" },
  { name: "Tailwind", image: "/icons/tailwind.svg" },
  { name: "MySQL", image: "/icons/mysql.svg" },
  { name: "NextAuth", image: "/icons/next-auth.svg" },
  { name: "Drizzle", image: "/icons/drizzle.svg" },
]

const playground = [
  { name: "TypeScript", image: "/icons/typescript.svg" },
  { name: "Astro", image: "/icons/astro.svg" },
  { name: "ThreeJS", image: "/icons/threejs.svg" },
  { name: "GSAP", image: "/icons/gsap.svg" },
]
---

<Layout title="Vladislav Iujev Portfolio">
  <main>
    <section class="intro">
      <div class="lines_image">
        <div class="lines">
          <p class="line-1">Hi!</p>
          <p class="line-2">I'm Vlad</p>
        </div>
        <div class="image"></div>
      </div>
      <p class="line-3"><span>Specialty:</span> Front-end</p>
    </section>

    <section class="tech">
      <h2>TECH-STACK</h2>
      <p class="tech_description">
        I primarily specialize on Front-end, although I also possess some
        proficiency in Back-end.
      </p>
      <ul class="tech_cards">
        <TechCard tech={base} />
        <TechCard tech={supersets} />
        <TechCard tech={frameworks} />
      </ul>
    </section>
    <section class="projects">
      <h2>RECENT PROJECTS</h2>
      <p class="projects_description">
        I am more proficient with Next.js, but I don't limit myself to just one
        framework or library. I'm adaptable and able to learn and utilize any
        tool as needed.
      </p>
      <ul class="projects_cards">
        <ProjectCard
          title="MY LEISURE"
          image="/projects/my-leisure.jpg"
          siteLink="#"
          githubLink="#"
          tech={myLeisure}
          description="This app allows you to scroll through large database of movies and books to find something to watch or read tonight."
        />
        <ProjectCard
          title="NEW FURNITURE"
          image="/projects/new-furniture.jpg"
          siteLink="#"
          githubLink="#"
          tech={newFurniture}
          description="Marketplace where you can find and buy furniture."
        />
        <ProjectCard
          title="PLAYGROUND"
          image="/projects/playground.jpg"
          siteLink="#"
          githubLink="#"
          tech={playground}
          description="This is my project where I experiment with WebGL using ThreeJS library and GSAP."
        />
      </ul>
    </section>
    <section>
      <h2>Get in touch</h2>
      <p>Post form</p>
    </section>
  </main>
</Layout>

<style lang="scss">
  main {
    padding: 1rem;

    display: grid;
    gap: 6rem;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 600;
    line-height: 1.25;

    padding-left: 2rem;

    font-family: Verdana, Geneva, Tahoma, sans-serif;
  }
  .intro {
    --line1-chars: 3;
    --line2-chars: 7;
    --line3-chars: 20;

    display: grid;
    justify-content: center;
    align-items: center;
    min-height: 90vh;

    font-family: Arial, Helvetica, sans-serif;
  }

  .lines {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.5rem;
  }

  .lines_image {
    display: grid;
    grid-template-columns: 15rem 15rem;
    gap: 2rem 6rem;
    justify-content: center;
  }
  .line-1 {
    --line-width: 6rem;
    border-right: 2px solid transparent;
    white-space: nowrap;
    overflow: hidden;
    animation:
      typewriter 200ms steps(var(--line1-chars)) 500ms 1 normal both,
      blinkTextCursor 500ms steps(var(--line1-chars)) var(--line1-chars) normal;

    font-size: 4rem;
    font-weight: 600;
    line-height: 1;
  }

  .line-2 {
    --line-width: 15.5rem;
    border-right: 2px solid transparent;
    white-space: nowrap;
    overflow: hidden;
    animation:
      typewriter 1s steps(var(--line2-chars)) calc((var(--line1-chars)) * 500ms)
        1 normal both,
      blinkTextCursor 500ms steps(var(--line2-chars))
        calc((var(--line1-chars)) * 500ms) calc(var(--line1-chars) + 2) normal;

    font-size: 4rem;
    font-weight: 600;
    line-height: 1;
  }

  .image {
    border: 1px solid black;
    border-radius: 100rem;
    background-image: url("/stock-img.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    object-fit: cover;
    width: 15rem;
    height: 15rem;

    opacity: 0;
    animation: fadeIn 3s forwards;
  }
  .line-3 {
    --line-width: 28.5rem;
    border-right: 2px solid transparent;
    white-space: nowrap;
    overflow: hidden;
    animation:
      typewriter 2s steps(var(--line3-chars))
        calc((var(--line2-chars) + 1) * 500ms) 1 normal both,
      blinkTextCursor 500ms steps(var(--line3-chars))
        calc((var(--line2-chars) + 1) * 500ms) 7 normal;

    font-size: 3rem;
    font-weight: 600;
    line-height: 1.3;

    align-self: start;
    justify-self: center;

    span {
      font-weight: 500;
    }
  }

  .tech {
    padding: 2rem 5rem;

    display: grid;
    gap: 3rem;

    min-height: 90vh;

    &_description {
      align-self: start;
      font-size: 1.4rem;
    }

    &_cards {
      display: grid;
      gap: 2rem;
    }
  }

  .projects {
    padding: 2rem;

    display: grid;
    justify-content: center;
    gap: 2rem;

    min-height: 90vh;

    &_description {
      align-self: start;
      font-size: 1.4rem;
    }

    &_cards {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      justify-content: center;
      gap: 2rem;
    }
  }

  @keyframes typewriter {
    from {
      width: 0;
    }
    to {
      width: var(--line-width);
    }
  }
  @keyframes blinkTextCursor {
    from {
      border-right-color: rgba(0, 0, 0, 0.75);
    }
    to {
      border-right-color: transparent;
    }
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>
