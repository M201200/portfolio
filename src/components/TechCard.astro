---
import { Image } from "astro:assets"

type Props = {
  tech: {
    name: string
    image: ImageMetadata
  }[]
}

const { tech } = Astro.props
---

<li class="card">
  <ul>
    {
      tech.map((item) => (
        <li>
          <div>
            <Image src={item.image} alt={item.name} loading="lazy" />
            <p>{item.name}</p>
          </div>
        </li>
      ))
    }
  </ul>
</li>

<style>
  .card {
    padding: 1rem;
    display: grid;
    gap: 2rem;
  }

  p {
    font-size: var(--font-size-3);
  }
  img {
    width: 4rem;
    height: 4rem;
  }

  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(6rem, 10rem));
    justify-content: center;
    gap: 2rem;

    li {
      display: grid;
      gap: 1rem;
      align-items: center;
      justify-items: center;
      justify-content: center;

      div {
        display: grid;
        place-content: center;
        justify-items: center;
        gap: 1rem;
        min-width: 9rem;
        min-height: 9rem;
        padding: 1rem;

        border: solid 1px rgb(172, 172, 172, 0.2);
        box-shadow: var(--shadow-2);
      }
    }
  }
</style>
