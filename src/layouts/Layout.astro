---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href="#">VLAD IUJEV</a>
      <div>
        <a href="#">MAIN</a><a href="#">PROJECTS</a><a href="#">CONTACTS</a>
      </div>
    </header>
    <slot />
  </body>

  <style is:global>
    @import "open-props/style";

    @layer reset {
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      body {
        margin: unset;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p {
        margin: 0;
        padding: 0;
        font-size: 1rem;
        font-weight: normal;
        font-style: normal;
        text-wrap: balance;
      }

      p {
        line-height: 1.6;
        letter-spacing: 0.5px;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      ul {
        margin: unset;
        padding: unset;
      }
      li {
        list-style: none;
      }

      button,
      input,
      textarea,
      select {
        font: inherit;
      }

      img,
      picture,
      svg,
      canvas {
        display: block;
        max-inline-size: 100%;
        block-size: auto;
      }

      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }
    }

    html {
      font-family: system-ui, sans-serif;
    }

    body {
      position: relative;
      background-color: rgb(250, 250, 250);
      padding-top: 6rem;
    }

    header {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      padding: 2rem;
      padding-right: 6rem;
      gap: 2rem;
      min-height: 6rem;

      position: fixed;
      z-index: 100;

      top: 0;
      width: 100%;

      background-color: rgb(252, 252, 252);
      box-shadow: var(--shadow-1);

      div {
        display: flex;
        gap: 2rem;
        justify-self: end;
      }

      a {
        font-size: 1.25rem;
        font-weight: 800;
        font-family: Arial, Helvetica, sans-serif;
        padding: 0.5rem;
      }
    }
  </style>
</html>
